<div class="container green">
  <div class="box text-center col-8">
    <h2>Job Info</h2>
    <br/>
    <%= simple_form_for @application, url: applications_path do |f| %>
      <h3><%= f.input :company_name %></h3>
      <br/>
      <h3><%= f.input :job_title %></h3>
      <br/>
      <h4><%= f.input :tech_job, as: :boolean %></h4>
      <h4><%= f.input :remote, as: :boolean %></h4>
      <br/>
      <div class="application-notes-input">
        <%= f.rich_text_area :content %>
      </div>
      <br/>
      <%= f.submit "Submit", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
